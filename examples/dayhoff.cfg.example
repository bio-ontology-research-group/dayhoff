[DEFAULT]
log_level = INFO
data_dir = ~/dayhoff_data

[HPC]
default_host = hpc.example.com
ssh_key_dir = ~/.ssh
known_hosts = ~/.ssh/known_hosts
credential_system = dayhoff_hpc
auth_method = key  # or 'password'
ssh_key = id_rsa  # Name of private key file in ssh_key_dir
username = your_username

[LOGGING]
file = ~/.config/dayhoff/dayhoff.log
level = INFO

[FILESYSTEM]
mode = local  # or 'remote'
local_root = /home/leechuck/dayhoff_data  # Use absolute path
remote_root = /home/leechuck/dayhoff_data  # Use absolute path

[LLM]
api_key = your_api_key_here
model = gpt-4
max_tokens = 4096
rate_limit = 60

[WORKFLOWS]
default_workflow_type = cwl
